                        <local:UserControl1/>
                    </StackPanel>
                </ScrollViewer>
                <Label Content="Товары в наличии" Margin="0" VerticalAlignment="Top" Width="199"/>
                <Button Content="Добавить товар" Margin="0" VerticalAlignment="Bottom" Canvas.Top="398" Width="199" Click="Button_Click_1"/>

            </Canvas>

        </Grid>
        <Grid Background="#ADD8E6" Grid.Column="1">
            <Canvas>
                <ScrollViewer MaxHeight="372" Height="372" Canvas.Top="26" Width="199" >
                    <StackPanel x:Name="PostavList" Background="LightBlue" CanVerticallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
