                <Button Content="Добавить поставщика" Margin="0" VerticalAlignment="Bottom" Canvas.Top="398" Width="199" Click="Button_Click_2"/>

            </Canvas>

        </Grid>
        <Grid Background="#ADD8E6" Grid.Column="3">
            <Canvas>
                <ScrollViewer MaxHeight="372" Height="350" Canvas.Top="26" Width="199" >
                    <StackPanel x:Name="ZakazList" Background="LightBlue" CanVerticallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
