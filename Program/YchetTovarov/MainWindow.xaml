                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                        <local:UserControl1/>
                    </StackPanel>
                </ScrollViewer>
                <Label Content="Товары" Margin="0" VerticalAlignment="Top" Width="199"/>
                <Button Content="Добавить товар" Margin="0" VerticalAlignment="Bottom" Click="Button_Click" Canvas.Top="398" Width="199"/>

            </Canvas>

        </Grid>
        <Grid Background="#ADD8E6" Grid.Column="2">
            <Canvas>
                <ScrollViewer MaxHeight="372" Height="372" Canvas.Top="26" Width="199" >
                    <StackPanel x:Name="SkladList" Background="LightBlue" CanVerticallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                        <local:UserControl1/>
